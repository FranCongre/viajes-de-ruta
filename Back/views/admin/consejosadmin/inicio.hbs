<div class="container" style="margin: 50px;">
    <div class="row" style="margin-top: 15px;">
        <div class="col-7">
            <h3>Listado de Consejos</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/consejosadmin/inicio/agregar"><i class="fa fa-plus" aria-hidden="trues"></i> + NUEVO </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-primary">
                        <th scope="col"> #</th>
                        <th scope="col"> Titulo</th>
                        <th scope="col"> Subtitulo</th>
                        <th class="text-end"> Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each consejos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{subtitulo}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/consejosadmin/inicio/modificar/{{id}}"><i class="bi bi-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/consejosadmin/inicio/eliminar/{{id}}"><i class="bi bi-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <a type="button" class="btn btn-outline-danger" href="/admin/inicio">Regresar</a>
    </div>
</div>